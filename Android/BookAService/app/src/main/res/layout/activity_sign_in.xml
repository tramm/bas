            <include layout="@layout/include_logo_bg"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/ic_editext_bg"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:padding="15dp"
                        android:src="@drawable/ic_profile_user" />

                    <com.bookservice.utils.view.BsEditText
                        android:id="@+id/et_mobile_no"
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:layout_weight="0.8"
                        android:background="@drawable/ic_editext_bg"
                        android:hint="MOBILE"
                        android:inputType="phone"
                        android:padding="15dp"
                        android:textSize="15sp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_pin"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/ic_editext_bg"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:padding="15dp"
                        android:src="@drawable/ic_password" />

                    <com.bookservice.utils.view.BsEditText
                        android:id="@+id/et_pin"
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:layout_weight="0.8"
                        android:background="@drawable/ic_editext_bg"
                        android:hint="PIN"
                        android:inputType="number"
                        android:padding="15dp"
                        android:password="true"
                        android:textSize="15sp" />


                </LinearLayout>

                <com.bookservice.utils.view.BsButton
                    android:id="@+id/btn_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/button_bg_orange_rounded"
                    android:drawableRight="@drawable/button_sigin"
                    android:padding="10dp"
                    android:paddingStart="40dp"
                    android:text="Verify Number"
                    android:textAllCaps="true"
                    android:textColor="@color/ice"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <com.bookservice.utils.view.BsTextView
                    android:id="@+id/txt_forgot_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:text="Forgot Password? Click here"
                    android:textColor="@color/snow" />
            </LinearLayout>
  <!--      </LinearLayout>
    </android.support.v4.widget.NestedScrollView>-->

</LinearLayout>
