<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/snow"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.activity.user.UserDetailActivity"
    tools:showIn="@layout/activity_customer_detail">

    <LinearLayout
        android:id="@+id/ll_no_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:src="@drawable/ic_no_list" />

        <com.bookservice.utils.view.BsTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="You do not have any Offers for this category."
            android:textColor="@color/grey_33"
            android:textSize="22sp" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_View"
        android:layout_width="match_parent"
        android:background="@color/snow"
        android:layout_height="wrap_content" />

</LinearLayout>